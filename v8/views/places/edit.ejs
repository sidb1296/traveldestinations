<%- include ('../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <h1 style="width:100%; text-align:center;">Edit <%= newplace.name%></h1>
        <div style="width:30%; margin: 0 auto;">
            <form action="/places/<%= newplace._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="updatedplace[name]" value="<%= newplace.name%>" required>

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="updatedplace[image]" value="<%= newplace.image%>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="updatedplace[description]" value="<%= newplace.description%>" required>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            
            </form>
            <a href="/places">Back to  Places!</a>

        </div>

    </div>
</div>



<%- include ('../partials/footer.ejs') %>
