<%- include ('partials/header.ejs') %>
<div class="container"style="padding-top: 125px; height: 85%;transform:translateY(15px);">
        <div class="container" id="logincontainer" >
            <h4 class="text text-primary text-center">Register</h4>
            <form action= "/register" method="POST">
                <div class="flex-container" style="display: flex;justify-content: center; ">
                    <div class="form-group">
                        <input class="form-control" id="loginformusername" type="text" name="username" minlength="6" placeholder= "username">
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="loginformpass" type="password" name="password" minlength="6" placeholder= "password">
                    </div>
                </div>
                
                <div>
                    <button class="btn btn-lg  btn-block"id="loginformbutton">Sign Up</button>

                </div>

            </form>
        </div>
</div>



