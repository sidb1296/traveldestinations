<%- include ('../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <h1 style="width:100%; text-align:center;">CREATE NEW PLACE</h1>
        <div style="width:30%; margin: 0 auto;">
            <form action="/places" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder= "name" minlength="6" maxlength="11" required>

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder= "imageurl" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder= "description" required>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            
            </form>
            <a href="/places" class="btn btn-primary btn-xs" role="button" style="background-color: grey;">Go Back</a>

        </div>

    </div>
</div>



