<%- include ('../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <h1 style="width:100%; text-align:center;">Edit your Comment for <%=recievedPl.name%></h1>
        <div style="width:30%; margin: 0 auto;">
            <form action="/places/<%=recievedPl.id%>/comments/<%=foundComment.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  name="comment[text]" value="<%=foundComment.text%>" required>
                </div>

                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/places" class="btn btn-primary btn-xs" role="button" style="background-color: grey;">Go Back</a>

        </div>

    </div>
</div>



